{
  "openapi": "3.0.3",
  "components": {
    "schemas": {
      "Lizard": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Reptile"
          },
          {
            "type": "object",
            "properties": {
              "color": {
                "description": "The color of the lizard",
                "default": "GREEN",
                "type": "string",
                "deprecated": false
              }
            }
          }
        ]
      },
      "Snake": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Reptile"
          },
          {
            "type": "object",
            "properties": {
              "lengthUnits": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/LengthUnitsEnum"
                  },
                  {
                    "description": "The units of measure for length",
                    "default": "CM"
                  }
                ]
              },
              "length": {
                "format": "double",
                "type": "number",
                "multipleOf": 0.1
              }
            }
          }
        ]
      },
      "LengthUnitsEnum": {
        "enum": [
          "CM",
          "MM",
          "IN"
        ],
        "type": "string"
      },
      "SpeedEnum": {
        "enum": [
          "slow",
          "slower",
          "slowest"
        ],
        "type": "string"
      },
      "Turtle": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Reptile"
          },
          {
            "type": "object",
            "properties": {
              "shellPattern": {
                "type": "string"
              },
              "speed": {
                "$ref": "#/components/schemas/SpeedEnum"
              }
            }
          }
        ]
      },
      "Reptile": {
        "required": [
          "type"
        ],
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          }
        },
        "discriminator": {
          "propertyName": "type",
          "mapping": {
            "lizard": "#/components/schemas/Lizard",
            "snake": "#/components/schemas/Snake",
            "turtle": "#/components/schemas/Turtle"
          }
        }
      }
    }
  }
}
